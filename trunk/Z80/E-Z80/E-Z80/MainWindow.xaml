<Window x:Class="E_Z80.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="570" Width="670">
    <StackPanel>
        <Image x:Name="ImageScreen" HorizontalAlignment="Left" Height="480" Margin="10" VerticalAlignment="Top" Width="640" Stretch="None" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Start" Width="75" Height="23" HorizontalAlignment="Left" Margin="5,0,0,0" Click="Button_Click"/>
            <Button Content="Reset" Width="75" Height="23" HorizontalAlignment="Left" Margin="5,0,0,0"/>

        </StackPanel>

    </StackPanel>
</Window>
