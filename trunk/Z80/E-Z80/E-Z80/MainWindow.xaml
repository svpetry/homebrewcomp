<Window x:Class="E_Z80.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Z80 Computer Emulator" Height="500" Width="680" ResizeMode="CanMinimize" TextInput="Window_TextInput" KeyDown="Window_KeyDown" PreviewKeyDown="Window_PreviewKeyDown">
    <StackPanel>
        <Image x:Name="ImageScreen" HorizontalAlignment="Left" Height="400" Margin="10" VerticalAlignment="Top" Width="640" Stretch="None" MouseDown="ImageScreen_MouseDown" Focusable="True" FocusManager.IsFocusScope="True" />
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="SD card directory:"></Label>
            <TextBox x:Name="TextBoxDirectory" Height="23" Width="250" TextWrapping="Wrap" Margin="5,0,0,0" />
            <Button x:Name="ButtonSelectDirectory" Content="..." Width="18" Margin="5,0,0,0" Click="SelectDirectory"/>
        </StackPanel>

    </StackPanel>
</Window>
